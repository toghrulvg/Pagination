@model Employee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Employee
                        </p>
                        <form asp-controller="Employee" asp-action="Create" class="forms-sample" method="post">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Fullname</label>
                                <input type="text" class="form-control" asp-for="FullName">
                                <span class="text-danger my-1" asp-validation-for="FullName"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername2">Age</label>
                                <input type="number" class="form-control" asp-for="Age">
                                <span class="text-danger my-1" asp-validation-for="Age"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername2">Position</label>
                                <input type="text" class="form-control" asp-for="Position">
                                <span class="text-danger my-1" asp-validation-for="Position"></span>
                            </div><div class="form-group">
                                <label for="exampleInputUsername2">Online/Offline</label>
                                <input type="text" class="form-control" asp-for="IsActive">
                                <span class="text-danger my-1" asp-validation-for="IsActive"></span>
                                @*<p> <span class="my-3">Online/Offline</span></p>
                                <input type="radio" class="my-3" id="true" name="fav_language" value="True"  asp-for="IsActive">
                                <span class="text-danger my-1" asp-validation-for="IsActive">True</span>
                                <input  type="radio" id="false" name="fav_language" value="False" asp-for="IsActive">
                                <span class="text-danger my-1" asp-validation-for="IsActive">False</span>*@
                        
                             </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}

