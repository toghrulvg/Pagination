@model Slider

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mx-5 my-3">
    <h3>Slider image</h3>
    <div class="img-area">
        <img src="~/img/@Model.Image" alt="/" style="height:200px" ; width="200px"/>
    </div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <a class="btn btn-primary" asp-controller="Slider" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>


